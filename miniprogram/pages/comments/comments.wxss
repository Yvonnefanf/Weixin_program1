/* pages/comments/comments.wxss */
.comments-container {
  position:relative;
}
.moviecomments-images {
  position: absolute;
  top:20rpx;
  left:50rpx;
  width:200rpx;
  height:300rpx;
}
.moviecomments-title{
  font-size:18px;
  color:#fff;
  position: absolute;
  top:20rpx;
  left:300rpx;
}
.detail-container{
  height:400rpx;
  filter: blur(40rpx);
  opacity: .4;
}
.detail-mask {
  position:absolute;
  width:100%;
  height:400rpx;
  background-color: #333;
  top:0;
  left:0;
  z-index:-1;
}
.detail-summary{
  font-size:12px;
}
.summary-container{
  padding: 30rpx;
}
.detail-info {
  position:absolute;
  top:100rpx;
  left:300rpx;
  color:#fff;
  font-size:12px;
}
.detail-rating{
  color:#faaf00;
}
.comment-submit{
  margin-top:20rpx;
}
.comment-img {
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
}